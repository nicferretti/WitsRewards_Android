<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/gradient_background"
        tools:context=".LoginActivity"
>

    <EditText
        android:id="@+id/loginStudentNumber"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:drawableStart="@drawable/ic_action_person"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/loginStudentNumber"
        android:textColorHint="@color/hintColour"
        android:textAlignment="center"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/loginPassword"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/loginStudentNumber"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_action_lock"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/loginPassword"
        android:textColorHint="@color/hintColour"
        android:inputType="textPassword"

        />

    <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginPassword"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
    />

    <Button
            android:id="@+id/loginButton"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_below="@+id/loginPassword"
            android:layout_marginTop="45dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_rectangle_login"
            android:text="@string/login"
            android:textColor="@color/hintColour"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:visibility="visible"  />


    <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_above="@id/loginStudentNumber"
            android:layout_marginBottom="50dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/wits_logo" />

    <Button
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginButton"
            android:layout_marginTop="45dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:text="@string/register_here"
            android:textColor="#cccccc"/>

</RelativeLayout>
