<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient"
    tools:context=".LoginActivity"
    >

    <EditText
        android:id="@+id/loginStudentNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/white"
        android:drawableStart="@drawable/ic_action_person"
        android:ems="10"
        android:hint="@string/loginStudentNumber"
        android:inputType="number"
        android:visibility="visible" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/loginStudentNum"
        android:layout_below="@+id/loginStudentNum"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_action_lock"
        android:ems="10"
        android:hint="@string/loginPassword"
        android:inputType="textPassword"
        android:background="@android:color/white"
        android:visibility="visible" />

    <Button
        android:id="@+id/loginButton"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/loginPassword"
        android:layout_below="@+id/loginPassword"
        android:layout_marginTop="51dp"
        android:background="@drawable/rounded_rectangle"
        android:elevation="0dp"
        android:text="Log in"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:visibility="visible" />


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@id/loginStudentNum"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_circle"
        android:src="@drawable/wits_logo" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_alignStart="@+id/loginButton"
        android:layout_alignRight="@+id/profile_image"
        android:layout_centerVertical="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="57dp"
        android:layout_marginRight="32dp"
        android:background="@android:color/transparent"
        android:text="Register Here"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />


</RelativeLayout>
